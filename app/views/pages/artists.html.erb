<div class="container">
  <div class="container-with-search">
    <h1 class="text-center">Artists</h1>
    <%= render 'shared/search-form', { placeholder: "Find an artist", form_path: artists_path } %>
  </div>
  <div class="artists-cards">
    <% @artists.each do |artist| %>
      <%= render partial: 'shared/artist-card', locals: { artist: artist } %>
    <% end %>
  </div>
</div>
