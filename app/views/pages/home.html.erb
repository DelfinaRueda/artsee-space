<div class="banner-container">
  <div class="banner">
    <%= render partial: 'shared/banner' %>
  </div>
</div>

<div class="gallery-container-home">
  <div class="container">
    <h2>Most viewed artworks</h2>
  </div>
    <%= render partial: 'shared/gallery', locals: { artworks: @popartworks.first(15) } %>
    <div class="bottom-crop"></div>
</div>

<div class="category-cards">
  <div class="category-card" style="background-image: url('https://images.unsplash.com/photo-1507643179773-3e975d7ac515?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80'); height: 300px; background-size: cover; background-position: 50% 50%;">
  <h2 style="color: white;"><em></em></h2>
  </div>
</div>

<div class="container-cards">
  <div class="container">
    <h2>Popular Artists</h2>
  </div>
  <div class="artists-cards">
    <% @users.sample(8).each do |user| %>
      <%= render partial: 'shared/artist-card', locals: { artist: user } %>
    <% end %>
  </div>
</div>
