<div class="banner-container">
  <div class="banner">
    <%= render partial: 'shared/banner' %>
  </div>
</div>
<div class="container-cards">
  <h2>Popular Artists</h2>
  <div class="artists-cards">
    <% @users.sample(8).each do |user| %>
      <%= render partial: 'shared/artist-card', locals: { artist: user } %>
    <% end %>
  </div>
</div>

<div class="category-cards">
  <div class="category-card" style="background-image: url('<%= image_url("home-categories-paintings.jpg") %>')">
    <h2>Painting</h2>
  </div>
  <div class="category-card" style="background-image: url('<%= image_url("home-categories-photographs.jpg") %>')">
    <h2>Photograph</h2>
  </div>
  <div class="category-card" style="background-image: url('<%= image_url("home-categories-drawings.jpg") %>')">
    <h2>Drawing</h2>
  </div>
  <div class="category-card" style="background-image: url('<%= image_url("home-categories-illustrations.jpg") %>')">
    <h2>Illustration</h2>
  </div>
</div>

<div class="container">
  <h2>Most sold artworks</h2>
    <%= render partial: 'shared/gallery', locals: { artworks: @popartworks.first(15) } %>
</div>
