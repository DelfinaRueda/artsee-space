<h1>Add a new artwork</h1>

<%= simple_form_for [@artwork] do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :photo, as: :file, label: "Artwork" %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :price_cents %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Back to profile", artist_path(current_user)  %>
