<div class="container">
  <h2>Artworks</h2>
  <div class="row">
    <div class="cards">
      <% @artworks.each do |artwork| %>
      <div class="class-category">
        <div class="card-top">
          <%= link_to artwork_path(artwork) do %>
         <img src="<%= artwork.artwork_pic %>" alt="artwork-pic">
          <div class="overlay">
          <p><%= artwork.description %></p>
          </div>
        </div>
        <% end %>
        <div class="card-bottom" style="margin-left: 15px">
            <h4><%= artwork.title %></h4>
            <p><%= artwork.user.first_name %> <%=artwork.user.last_name %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

