<div class="artist-card">
  <div class="card-artwork">
    <div id="<%= user.username %>" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% artworks.where(user_id: user.id).each_with_index do |artwork, i| %>
          <% if i == 0 %>
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= artwork.artwork_pic %>" alt="Slide">
            </div>
          <% else %>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= artwork.artwork_pic %>" alt="Slide">
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#<%= user.username %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#<%= user.username %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="card-profile">
    <img src="<%= user.profile_pic %>" alt="Profile picture">
    <div class="profile-info">
      <h5><%= user.first_name %> <%= user.last_name %></h5>
    </div>
  </div>
</div>
