<div class="artist-card">
  <div class="card-artwork">
    <div id="<%= artist.username %>" class="carousel slide" data-ride="carousel" data-interval="false">
      <div class="carousel-inner">
        <% artist.artworks.where(user_id: artist.id).each_with_index do |artwork, i| %>
          <% if i == 0 %>
            <div class="carousel-item active">
              <% unless artist.artworks.count == 0 %>
                <img class="d-block w-100" src="<%= artwork.artwork_pic %>" alt="Slide">
              <% end %>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= artwork.title %></h5>
              </div>
            </div>
          <% else %>
            <div class="carousel-item">
              <% unless artist.artworks.count == 0 %>
                <img class="d-block w-100" src="<%= artwork.artwork_pic %>" alt="Slide">
              <% end %>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= artwork.title %></h5>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#<%= artist.username %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#<%= artist.username %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="card-profile">
    <img src="<%= artist.profile_pic %>" alt="Profile picture">
    <div class="profile-info">
      <h5><%= artist.first_name %> <%= artist.last_name %></h5>
    </div>
  </div>
</div>
