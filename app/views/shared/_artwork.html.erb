<% if current_user.present? %>
  <% if current_user.id == artwork.user_id  %>
      <% @unread_comments = artwork.comments.where(read: false).map do |comment|%>
      <% comment.content %>
    <% end %>
    <% unless @unread_comments.count == 0 %>
      <p class="gallery-notification-icon"><%= @unread_comments.count %></p>
    <% else %>
    <% end %>
  <% end %>
<% else %>
<% end %>
<% if artwork.photo.attached? %>
  <%= cl_image_tag artwork.photo.key, width: '100%', class: "artwork" %>
<% else %>
  <img src="<%= artwork.artwork_pic %>" alt="artwork-pic" style="width: 100%;">
<% end %>
