<div class="artwork-cards">
  <% artworks.each do |artwork| %>
    <div class="artwork-card">
      <%= render partial: 'shared/artwork', locals: { artwork: artwork} %>
      <a class="overlay" href="<%= artwork_path(artwork) %>">
        <h4><%= artwork.title %></h4>
        <p><%= artwork.user.first_name %>
          <%=artwork.user.last_name %></p>
          <% if artwork.description.length > 100 %>
            <p><%= artwork.description.slice(0,100)%>...</p>
          <% else %>
           <p><%= artwork.description%></p>
          <% end %>
      </a>
    </div>
  <% end %>
