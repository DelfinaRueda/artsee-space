
<h1 style="margin-left: 15px">Upcoming Events</h1>
<div class="container-events">
  <% counter = 0 %>
  <div class="event-cards col-7">
    <% @events.each do |event| %>
    <div class="card-event">
      <img src="https://source.unsplash.com/random?sig=<%= counter %>" />
      <% counter += 1 %>
      <div class="card-product-infos">
        <h5><%=event.date.strftime("%a, %b %dth")%></h5>
        <h2><%= event.name %></h2>
        <h6><%=event.location%></h6>
        <h6>Price: <%=event.fee%>Â£</h6>
        <a href="#"><i class="fas fa-heart"></i></a>
      </div>
    </div>
    <% end %>
  </div>
  <div class="map-container col-5">
  <div
    id="map"
    style="width: 100%;
    height: 82vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  </div>
</div>

